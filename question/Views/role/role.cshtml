@model question.view_model.rolevm

@{
    ViewData["Title"] = "role";
}

<h1 class="m-auto">Add Role</h1>

<hr />
<div class="row m-auto">
    <div class="col-md-4">
        <form asp-action="save" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role_Name" class="control-label"></label>
                <input asp-for="Role_Name" class="form-control" />
                <span asp-validation-for="Role_Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" asp-controller="home" class="btn-secondary">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
